@using com.ambergove.Helpers


<!DOCTYPE html>
<html>
<head>
    <title>Alpha by HTML5 UP</title>
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <meta name="description" content="" />
    <meta name="keywords" content="" />


    <link href='http://fonts.googleapis.com/css?family=Lato:400,700,400italic,700italic' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Pacifico' rel='stylesheet' type='text/css'>
    @Styles.Render("~/css/all")
    <link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/jquery.slick/1.5.0/slick.css" />
    <link rel="stylesheet" type="text/css" href="~/css/slick-theme.css" />
    @Scripts.Render("~/bundles/modernizr")
  
    <script type="text/javascript" src="http://code.jquery.com/jquery-2.1.4.min.js"></script>

    <!--[if lte IE 8]><script src="css/ie/html5shiv.js"></script><![endif]-->
    <!--[if lte IE 8]><link rel="stylesheet" href="css/ie/v8.css" /><![endif]-->

    <script src="//use.typekit.net/atc0xue.js"></script>
    <script>try { Typekit.load(); } catch (e) { }</script>
</head>
<body class="landing paisley ">

    <!-- Header -->
    <header id="header" class="other">
        <nav id="nav">
            <ul>
                <li class="1u @Html.IsSelected(action: "Index", controller: "Home")">
                    @Html.ActionLink("Home", "Index", "Home")
                </li>
                <li class="1u @Html.IsSelected(action: "menu", controller: "Home")">
                    @Html.ActionLink("Menu", "Menu", "Home")

                </li>
                <li class="1u @Html.IsSelected(action: "Contact", controller: "Home")">
                    @Html.ActionLink("Contact", "Contact", "Home")
                </li>
            </ul>
        </nav>
    </header>
    @RenderBody()


    <!-- Footer -->
    <footer id="footer">
        <h2 class="subheading">Follow me:</h2>
        <ul class="icons">
            <li><a href="#" class="icon fa-twitter"><span class="label">Twitter</span></a></li>
            <li><a href="#" class="icon fa-facebook"><span class="label">Facebook</span></a></li>
            <li><a href="#" class="icon fa-instagram"><span class="label">Instagram</span></a></li>
            <li><a href="#" class="icon fa-google-plus"><span class="label">Google+</span></a></li>
        </ul>
        <ul class="copyright">
            <li>Amber Gove, Copyright &copy; 2015</li>
        </ul>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>